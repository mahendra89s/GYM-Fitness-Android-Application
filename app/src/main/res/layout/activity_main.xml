<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="53dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/userimg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:fontFamily="sans-serif-black"
                android:text="Welcome, User"
                android:textColor="#000000"
                android:textSize="22dp" />


        </LinearLayout>

        <Button
            android:id="@+id/reset"
            android:layout_width="139dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="10sp"
            android:layout_weight="1"
            android:background="#F44336"
            android:text="Reset" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tenor"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_steps"
        android:layout_width="234dp"
        android:layout_height="79dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-black"
        android:gravity="center_horizontal|center_vertical"
        android:hint="0"
        android:paddingTop="10dp"
        android:textColor="#000000"
        android:textSize="40dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="150dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="99dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif-condensed"
            android:paddingStart="20dp"
            android:text="Steps"
            android:textColor="#B3B1B1"
            android:textSize="15dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_steps2"
                        android:layout_width="121dp"
                        android:layout_height="44dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="8dp"
                        android:hint="0"
                        android:paddingTop="10dp"
                        android:textColor="#000000"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="44dp"
                        android:layout_height="43dp"

                        android:layout_marginTop="8dp"

                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif-condensed"
                        android:paddingStart="1dp"
                        android:paddingTop="10dp"
                        android:text="km"
                        android:textColor="#B3B1B1"
                        android:textSize="20dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="118dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"

                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingTop="2dp"
                    android:text="Distance travelled"
                    android:textColor="#B3B1B1"
                    android:textSize="12dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="73dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/l3" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="211dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/calorie"
                        android:layout_width="97dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="8dp"
                        android:hint="0"
                        android:inputType="number"
                        android:paddingTop="10dp"
                        android:textColor="#000000"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif-condensed"
                        android:paddingStart="3dp"
                        android:paddingTop="8dp"
                        android:text="kcal"
                        android:textColor="#B3B1B1"
                        android:textSize="20dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="69dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="38dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Calories burnt"
                    android:textColor="#B3B1B1"
                    android:textSize="12dp" />
            </LinearLayout>


        </LinearLayout>



    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/diet"
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="63dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="95dp"
            android:layout_marginEnd="56dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/log_button"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Diet Plans"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="63dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="56dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/log_button"
            android:onClick="intentEvent"
            android:text="Workouts"
            android:textSize="25sp" />

        <Button
            android:id="@+id/weight_track"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="58dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="59dp"
            android:background="@drawable/log_button"
            android:text="Fitness"
            android:textSize="25sp" />

    </RelativeLayout>
    <Button
        android:id="@+id/btnremove"
        android:layout_width="46dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="460dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_white"
        android:onClick="remove"
        android:paddingBottom="20dp"
        android:text="-"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="204dp"
        android:layout_height="62dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="456dp"
        android:background="@drawable/rounded_white"
        android:fontFamily="sans-serif-condensed"
        android:paddingStart="20dp"
        android:text="Water"
        android:textColor="#000000"
        android:textSize="40dp" />

    <Button
        android:id="@+id/btnadd"
        android:layout_width="46dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="460dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_white"
        android:onClick="add"
        android:text="+"
        android:textSize="30dp" />


</LinearLayout>